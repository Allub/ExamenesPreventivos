<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrarPacienteActivity">

    <include
        layout="@layout/toolbar"
        ></include>



    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:text="Ingrese Rut:"
            android:layout_weight="1"
            android:textSize="@dimen/letraTextView"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/rut_pac_txt"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Ej: 19620502-1"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:text="Ingrese Nombre: "
            android:layout_weight="1"
            android:textSize="@dimen/letraTextView"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/nombre_pac_txt"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Ej: Franco"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:text="Ingrese Apellido: "
            android:layout_weight="1"
            android:textSize="@dimen/letraTextView"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/apellido_pac_txt"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Ej: Torres"></EditText>

    </LinearLayout>



    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fechaBtn"
            android:layout_width="@dimen/buttonFecha"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha"></Button>

        <TextView
            android:textSize="@dimen/letraTextView"
            android:id="@+id/fecha_pac_txt"
            android:layout_width="@dimen/buttonFecha"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout140"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Area de Trabajo: "
            android:textColor="@color/colorText"
            android:textSize="@dimen/letraTextView"></TextView>

        <Spinner
            android:id="@+id/areaSp"
            android:layout_weight="1"
            android:layout_width="@dimen/layoutWidth"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:text="¿Presenta síntomas de covid?"
            android:layout_weight="1"
            android:textSize="@dimen/letraTextView"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"></TextView>
        <Switch
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:id="@+id/sintomas_sw"
            android:textOn="si"
            android:textOff="no"
            android:showText="true"
            android:layout_height="wrap_content"></Switch>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:text="Temperatura: "
        android:layout_weight="1"
        android:textSize="@dimen/letraTextView"
        android:textColor="@color/colorText"
        android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:id="@+id/tempe_pac_txt"
            android:layout_weight="1"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_marginTop="@dimen/marginTop15"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:text="¿Presenta tos?"
            android:layout_weight="1"
            android:textSize="@dimen/letraTextView"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"></TextView>
        <Switch
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:id="@+id/tosSw"
            android:textOn="si"
            android:textOff="no"
            android:showText="true"
            android:layout_height="wrap_content"></Switch>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/layout300"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:text="Presion arterial: "
            android:layout_weight="1"
            android:textSize="@dimen/letraTextView"
            android:textColor="@color/colorText"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:inputType="numberSigned"
            android:id="@+id/presion_pac_txt"
            android:layout_weight="1"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>


    <Button
        android:id="@+id/registrarBtn"
        android:layout_width="@dimen/layoutBtn"
        android:layout_marginLeft="@dimen/layoutWidth"
        android:layout_marginTop="@dimen/marginTop20"
        android:layout_height="@dimen/layoutHeight"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTextInicio"
        android:text="Registrar"></Button>


</LinearLayout>