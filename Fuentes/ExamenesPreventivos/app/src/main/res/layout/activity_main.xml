<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/letraTitulo"
        android:gravity="center"
        android:text="Inicio de sesi칩n"
        android:textColor="@color/colorText"
        android:textSize="@dimen/letraTitulo"></TextView>

    <LinearLayout
        android:layout_width="@dimen/widthLetra"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin50"
        android:layout_marginTop="@dimen/margin100"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/marginTop20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nombre: "
            android:textColor="@color/colorText"
            android:textSize="@dimen/letraTextView"></TextView>

        <EditText
            android:id="@+id/nombre"
            android:layout_width="@dimen/marginTopBase"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin30"
            android:layout_weight="1"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/widthLetra"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin50"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/marginTop20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Contrase침a: "
            android:textColor="@color/colorText"
            android:textSize="@dimen/letraTextView"></TextView>

        <EditText
            android:id="@+id/contrase침a"
            android:layout_width="@dimen/marginTopBase"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin30"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:maxLength="4"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/sesion"
        android:layout_width="@dimen/layoutBtn"
        android:layout_height="@dimen/layoutHeight"
        android:layout_marginLeft="@dimen/layoutWidth"
        android:layout_marginTop="@dimen/marginTop20"
        android:background="@color/colorPrimaryDark"
        android:text="Iniciar sesi칩n"
        android:textColor="@color/colorTextInicio"></Button>


</LinearLayout>